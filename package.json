{
  "name": "@shieldforge/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A comprehensive authentication library for React/Node/GraphQL applications",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @appforgeapps/shieldforge-types && npm run build -w @appforgeapps/shieldforge-browser && npm run build -w @appforgeapps/shieldforge-core && npm run build -w @appforgeapps/shieldforge-graphql && npm run build -w @appforgeapps/shieldforge-passkey && npm run build -w @appforgeapps/shieldforge-react",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "publish:npm": "./scripts/publish.sh",
    "publish:dry-run": "./scripts/publish.sh --dry-run"
  },
  "keywords": [
    "authentication",
    "auth",
    "jwt",
    "react",
    "graphql",
    "passkey",
    "webauthn",
    "security"
  ],
  "author": "chriscase",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.15",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "nodemailer": "^7.0.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15"
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
