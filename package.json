{
  "name": "@shieldforge/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A comprehensive authentication library for React/Node/GraphQL applications",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "lint": "npm run lint --workspaces --if-present"
  },
  "keywords": [
    "authentication",
    "auth",
    "jwt",
    "react",
    "graphql",
    "passkey",
    "webauthn",
    "security"
  ],
  "author": "chriscase",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
